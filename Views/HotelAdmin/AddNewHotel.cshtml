          var connection = new signalR.HubConnectionBuilder()
            .withUrl("/HAddHotel")
            .build();

          connection
            .start()
            .then(() => {
              console.log("connection started");
            })
            .catch();
      connection.on("CheckConnect",(t)=>{
          console.log(t);
